@model I2oko.Models.UserModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel='stylesheet'
          href='https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap'>
    <link rel="stylesheet" href="../Content/style/edit profile style.css">
    <meta name="viewport" content="initial-scale=1, width=device-width" />
    <link href='https://fonts.googleapis.com/css?family=Parisienne' rel='stylesheet'>
    <link rel="icon" href="../Content/img/Idoko/favicon.ico">

</head>

<body>
    <div class="rectangle Background"></div>
    <a href="/Home/Proofile">
        <img class="BackIcon" src="~/Content/img/back.png" />
    </a>   
    </div>
    @using (Html.BeginForm())
    {
        <div class="Profile"> @Html.LabelFor(x => x.Picture) </div>
        <input type="file" name="Pic" id="FileUpload" accept=".png,.jpg,.jpeg,.gif,.tif" />

        <p class="UserName">نام کاربری</p>
        <div id="UserName"> @Html.TextBoxFor(x => @Session["UserName"], new { disabled = "disabled" }) </div>
        <p class="FamilyName">نام ونام خانوادگی</p>
        <div> @Html.TextBoxFor(x => x.Fname)</div>
        <p class="BirthDay">تاریخ تولد</p>
        <div> @Html.TextBoxFor(x => x.BirthDate) </div>
        <p class="CatGory">زمینه فعالیت</p>
        <div> @Html.EnumDropDownListFor(x => x.Categuri) </div>
        <p class="Gandr">جنسیت</p>
        <div> @Html.EnumDropDownListFor(x => x.Sexuality) </div>
        <p class="Phone">شماره تلفن</p>
        <div> @Html.TextBoxFor(x => @Session["phone"], new { disabled = "disabeld"}) </div>
        <p class="Bio">بیو گرافی</p>
        <div> @Html.TextAreaFor(x => x.Biography) </div>
        <p class="Emil">ایمیل</p>
        <div> @Html.TextBoxFor(x => x.Email) </div>
        <p class="Loction">موقعیت مکانی</p>
        <div> @Html.TextBoxFor(x => x.Address) </div>
        <input class="Record btn-secondary hover-grow" type="submit" value="ثبت" />
    }
    <div class="rectangle rm1"></div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
            crossorigin="anonymous"></script>
</body>

</html>
